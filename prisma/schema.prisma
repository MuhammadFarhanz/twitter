generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String    @unique
  password  String
  name      String?
  bio       String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  token     String?
  comments  Comment[]
  likes     Like[]
  tweets    Tweet[]   @relation("userTweets")
  retweets  Retweet[]
}

model Tweet {
  id        Int       @id @default(autoincrement())
  content   String
  authorId  Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  images    Image[]
  comments  Comment[] @relation("commentTweets")
  likes     Like[]
  author    User      @relation("userTweets", fields: [authorId], references: [id])
  retweets  Retweet[]
}

model Image {
  id        Int      @id @default(autoincrement())
  tweetId   Int
  url       String
  createdAt DateTime @default(now())

  tweet Tweet @relation(fields: [tweetId], references: [id])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  tweetId   Int
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  tweet     Tweet    @relation("commentTweets", fields: [tweetId], references: [id])
}

model Like {
  id        Int      @id @default(autoincrement())
  tweetId   Int
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tweet     Tweet    @relation(fields: [tweetId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([tweetId, userId])
}

model Retweet {
  id        Int      @id @default(autoincrement())
  tweetId   Int
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tweet Tweet @relation(fields: [tweetId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@unique([tweetId, userId])
}
